{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
 
  "include": ["src/**/*.ts", "docs/**/*.ts"],
  "exclude": ["src/node_modules", "docs/node_modules", "build", "docs/**/*.d.ts"]
}